<section id="warehouses">

  <h2> Galpões & Estoque </h2>
  <div> 
  </div>
   <%= flash[:notice] %>
  <div> 
  <%= link_to('Cadastrar Galpão', new_warehouse_path) %>  
  </div>

  <% @warehouses.each do |w| %>
    <div>
      <h3><<%= link_to(w.name, warehouse_path(w.id)) %></h3>
      <dl>
        <dt>Descrição:</dt>
        <dd><%= w.description %></dd>
        <dt>Código:</dt>
        <dd><%= w.code %></dd>
        <dt>Endereço:</dt>
        <dd><%= w.address %></dd>
        <dt>Cidade:</dt>
        <dd><%= w.city %></dd>
        <dt>CEP:</dt>
        <dd><%= w.cep %></dd>
        <dt>Área: </dt>
        <dd><%= w.area %> m²</dd>
      </dl>
    </div>

  <% end %>


  <% if @warehouses.empty? %>
   <p> Não existem galpões cadastrados <p>    
  <% end %>

</section>


